<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_net_error_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/txt_net_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:src="@drawable/empty_pic_net" />

        <com.mh55.easy.widget.RadiusTextView
            android:id="@+id/btn_net_refresh"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            app:rv_backgroundColor="@color/app_system_color"
            android:text="刷新"
            android:textColor="@color/color_white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>