<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  自定义标题栏  -->
    <declare-styleable name="TitleBar">
        <attr name="bar_title_color" format="color" />
        <attr name="bar_title_tv_center" format="string" />
        <attr name="bar_titie_tv_right" format="string" />
        <attr name="bar_titie_tv_right_icon" format="reference" />
        <attr name="bar_titie_tv_left" format="string" />
        <attr name="bar_titie_tv_left_icon" format="reference" />
        <attr name="bar_title_tv_center_color" format="color" />
        <attr name="bar_title_tv_right_color" format="color" />
        <attr name="bar_title_tv_left_color" format="color" />
    </declare-styleable>

    <!--  底部标签  -->
    <declare-styleable name="TabButton">
        <!--    选中图片    -->
        <attr name="tbn_selected_icon" format="reference" />
        <!--     未选中图标   -->
        <attr name="tbn_unselected_icon" format="reference" />
        <!--     提示文字   -->
        <attr name="tbn_tip" format="string" />
        <!--    图片大小    -->
        <attr name="tbn_icon_size" format="dimension" />
        <!--    文字大小    -->
        <attr name="tbn_text_size" format="dimension" />
        <!--    文字颜色   默认    -->
        <attr name="tbn_text_color" format="color" />
        <!--    文字颜色    选中    -->
        <attr name="tbn_text_select_color" format="color" />
        <!--    是否选中    -->
        <attr name="tbn_checked" format="boolean" />
    </declare-styleable>

    <!--  圆角TextView  -->
    <declare-styleable name="RadiusTextView">
        <attr name="rv_backgroundColor" format="reference|color" />
        <attr name="rv_radius" format="dimension|reference" />
        <attr name="rv_strokeWidth" format="dimension|reference" />
        <attr name="rv_strokeColor" format="reference|color" />
        <attr name="rv_strokePressedColor" format="reference|color" />
        <attr name="rv_strokeEnabledColor" format="reference|color" />
        <attr name="rv_radiusHalfHeightEnable" format="boolean" />
        <attr name="rv_widthHeightEqualEnable" format="boolean" />
        <attr name="rv_topLeftRadius" format="dimension|reference" />
        <attr name="rv_topRightRadius" format="dimension|reference" />
        <attr name="rv_bottomLeftRadius" format="dimension|reference" />
        <attr name="rv_bottomRightRadius" format="dimension|reference" />
        <attr name="rv_rippleEnable" format="boolean" />
    </declare-styleable>
</resources>